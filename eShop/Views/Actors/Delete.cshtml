@*
  Actors details page  
*@

@model Actor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete Confirmation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width:150px"/>
                </div> @*Profile picture preview*@

                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly/>
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span> @*First field of the actors creation page*@
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly/>
                    <span asp-validation-for="FullName" class="text-danger"></span> @*Second field of the actors creation page*@
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span> @*Third field of the actors creation page (readonly)*@
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id">
                        <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
        var output = document.getElementById('ProfilePicturePreview');
        output.src = $("#ProfilePictureURL").val();
        })
    </script>
}

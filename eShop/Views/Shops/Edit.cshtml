@*
  Shops edit page  
*@

@model Shop

@{
    ViewData["Title"] = "Update shop";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Shop</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group text-center">
                    <img id="ShopLogoPreview" class="border-info rounded-circle" style="max-width:150px"/>
                </div> @*Shop Logo preview*@

                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span> @*First field of the actors creation page*@
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span> @*Second field of the actors creation page*@
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span> @*Third field of the actors creation page*@
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn-primary btn-outline-success float-right" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
        var output = document.getElementById('ShopLogoPreview');
        output.src = $("#Logo").val();
        })
        $("#Logo").on("change", function() {
            var output = document.getElementById('ShopLogoPreview');
            output.src = $(this).val();
        })
    </script>
}

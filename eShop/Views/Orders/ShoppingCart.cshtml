@*
    Orders details page
*@
@using eShop.Data.ViewModels;

@model ShoppingCartVM

@{
    ViewData["Title"] = "Shopping Cart Summary";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2> Your Shopping Cart Summary</h2>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Selected Amount</th>
                    <th>Movie Name</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                {
                    <tr>
                        <td class="align-middle">@item.Amount</td>
                        <td class="align-middle">@item.Movie.Name</td>
                        <td class="align-middle">@item.Movie.Price.ToString("c")</td>
                        <td class="align-middle">@((item.Amount*item.Movie.Price).ToString("c"))</td>
                        <td class="align-middle">
                            <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-dash"></i>
                            </a>
                            |
                            <a class="text-success" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.Movie.Id">
                                <i class="bi bi-cart-plus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                    <td><b>Total:</b></td>
                    <td>
                        @Model.ShoppingCartTotal.ToString("c")
                    </td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                @*<a class="btn btn-outline-primary" asp-action="CompleteOrder">
                    Complete Order
                </a>*@

                <div id="paypal-btn"></div>
                <span style="padding:5px"></span>
                |
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    Add More Items
                </a>
            </div>
        </div>

    </div>
</div>

@section Scripts
{
    <script src="https://www.paypalobjects.com/api/checkout.js"></script>
    <script>

        //Getting the total for the paypal transaction
        let _total = @Html.Raw(Model.ShoppingCartTotal);

        paypal.Button.render({
            //Configuring the environment
            env: 'sandbox',
            client: 
            {
                sandbox:'AR3vYDIimpoDLkePbH99GtXp1v4d6vC6w7N1DqF-t92g547f99GS2hi1EuzK8ukOCchoDoK1kumSNv1F'
            },

            //Customize the button
            locale: 'en_US',
            style: {
                size: 'small',
                color: 'gold',
                shape: 'pill'
            },
            commit: true,

            //Payment
            payment: function (data, actions)
            {
                return actions.payment.create({ //We are using the create method because we are creating the payment
                    transactions: [{
                        amount : {
                            total: _total,
                            currency: 'USD'
                        }
                    }]
                });
            },
            //Execute payment
            onAuthorize: function (data, actions)
            {
                return actions.payment.execute().then(function () {
                    var url = '@Url.Action("CompleteOrder", "Orders", new { })';
                    window.location.href = url; //After the order is executed, we will be redirected to the OrderCompleted view
                });
            },

        }, '#paypal-btn');
    </script>
}